
    <div id="app">
        <input type="text" placeholder="enter your todo" v-model="todoText" />
        <button v-on:click="addTodo">Add</button>

        <ol>
            <li v-for="(todo,index) in todos">
                {{ todo.text }}
                <button v-on:click="delTodo(index)">Del</button>
            </li>
        </ol>

        <div v-if="todos.length !=0">
            Total : {{todos.length}} items   <button v-on:click="clearAll()">Clear</button>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="~/Scripts/Views/ToDo.js"></script>